<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/theme_primary_dark"
    tools:context="de.andreasschrade.androidtemplate.activities.peripheral.HostGamingActivity">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Online"
        android:id="@+id/radioButton"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:clickable="false"
        android:enabled="true" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:layout_below="@+id/radioButton"
        app:backgroundTint="@color/theme_primary_accent"
        android:clickable="true"
        android:layout_marginLeft="@dimen/regular_offset"
        android:layout_marginRight="@dimen/regular_offset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_height="150dp"
        android:id="@+id/list"
        android:layout_below="@+id/question" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/fab8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />


</RelativeLayout>
