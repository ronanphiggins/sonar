<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/game_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:weightSum="1">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/playerpic1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/playerpic2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/playerpic3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/playerpic4"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>


            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/theme_primary_dark"/>


        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="288dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">



            <TextView
                android:text="Round 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:id="@+id/textView2"
                android:textAlignment="gravity"
                android:gravity="center_horizontal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="20dp">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Answer"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:layout_weight="1" />




            </LinearLayout>



            <LinearLayout
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/regular_offset"
                    app:backgroundTint="@color/theme_primary_dark"
                    android:clickable="true"
                    app:elevation="24dp" />


            </LinearLayout>






        </LinearLayout>




    </LinearLayout>



</RelativeLayout>